<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">management.student.list</field>
        <field name="model">management.student</field>
        <field name="arch" type="xml">
            <list> 
                <field name="name"/>
                <field name="email"/>
                <field name="roll_no"/>
                <field name="department"/>
            </list>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">management.student.form</field>
        <field name="model">management.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="roll_no"/>
                            <field name="department"/>
                        </group>
                    </group>
                    <field name="course_ids" widget="many2many_tags"/>
                    <footer>
                        <button name="action_show_courses" string="Show Enrolled Courses" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">management.student</field>
        <field name="view_mode">list,form</field>  
    </record>

    <menuitem id="menu_student_management" name="Student Management" sequence="10"/>
    <menuitem id="menu_students" name="Students" parent="menu_student_management" action="action_student" sequence="20"/>
</odoo>